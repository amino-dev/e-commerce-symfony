<!DOCTYPE html>
<html>
   <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <title>Phone Store</title>
    <style>
     .card-horizontal {
        display: flex;
        flex: 1 1 auto;
     }
     .img {
        height: 200px;
        width: auto;
     }
    </style>
   </head>
   <body>
<div class="container">
<nav class="navbar navbar-expand-lg navbar-light ">
 <a class="navbar-brand" href="#">
     <img src="{{ asset('img/logo/phone.png') }}" width="75" height="auto" class="d-inline-block align-top" alt="">
     </a>
       <a class="navbar-brand" href="#">Phone Store</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
   <form class="form-inline mx-auto">
    <input class="form-control" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
  </form>
    <div class="navbar-nav ml-auto">
        {% if not app.user %}
      <a class="nav-link active" href="{{ path('app_login') }}"><i class="fas fa-user-check"></i><span class="sr-only">(current)</span></a>
      <a class="nav-link" href="{{ path('app_register') }}"><i class="fas fa-user-plus"></i></a>
        {% else %}
        <a class="nav-link" href=""> You are logged in as {{ app.user.username }}</a>
        <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i></a>
        {% endif %}
    </div>
  </div>
</nav>
</div>

<h2 class="text-center my-5">Our products</h1>
    {% for product in produits %}
     <div class="container mt-5">
      <div class="row">
        <div class="col-12 mt-3">
            <div class="card">
                <div class="card-horizontal">
                    <div class="img-square-wrapper">
                        <img class="img" src="{{ asset('img/'~product.img|e) }}" alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">{{ product.name }}</h4>
                        <p class="card-text">{{ product.description }}.</p>
                        <h4>{{ product.price }} TND</h4>
                        <button type="button" class="btn btn-secondary">Purchase</button>
                    </div>
                </div>
            </div>
        </div>
      </div>
     </div>
      {# <div class="container">
        <div class="card" style="width: 18rem;">
          <img src="{{ asset('img/'~produit.img|e) }}" class="card-img-top" alt="" />
          <div class="card-body">
           <p class="card-text">{{ produit.name }}</p>
           <p class="card-text">{{ produit.prix }}</p>
          </div>
        </div>
      </div> #}
    {% else %}
     <h1>no records found</h1>     
    {% endfor %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
   </body>
</html>
